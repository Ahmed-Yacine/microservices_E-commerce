{
  "name": "microservices-e-commerce",
  "version": "1.0.0",
  "description": "E-commerce microservices platform with NestJS and NATS",
  "private": true,
  "scripts": {
    "lint": "eslint \"{**/src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{**/src,apps,libs,test}/**/*.ts\"",
    "format": "prettier --write \"{**/src,**/test}/**/*.ts\" \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"{**/src,**/test}/**/*.ts\" \"**/*.{js,json,md}\"",
    "install:all": "npm run install:gateway && npm run install:users && npm run install:products && npm run install:orders && npm run install:payments && npm run install:inventory && npm run install:notifications && npm run install:files && npm run install:email",
    "install:gateway": "cd http-api-gateway && npm install",
    "install:users": "cd users-microservice && npm install",
    "install:products": "cd products-microservice && npm install",
    "install:orders": "cd orders-microservice && npm install",
    "install:payments": "cd payments-microservice && npm install",
    "install:inventory": "cd inventory-microservice && npm install",
    "install:notifications": "cd notifications-microservice && npm install",
    "install:files": "cd files-upload-microservice && npm install",
    "install:email": "cd email-sms-microservice && npm install",
    "build:all": "npm run build:gateway && npm run build:users && npm run build:products && npm run build:orders && npm run build:payments && npm run build:inventory && npm run build:notifications && npm run build:files && npm run build:email",
    "build:gateway": "cd http-api-gateway && npm run build",
    "build:users": "cd users-microservice && npm run build",
    "build:products": "cd products-microservice && npm run build",
    "build:orders": "cd orders-microservice && npm run build",
    "build:payments": "cd payments-microservice && npm run build",
    "build:inventory": "cd inventory-microservice && npm run build",
    "build:notifications": "cd notifications-microservice && npm run build",
    "build:files": "cd files-upload-microservice && npm run build",
    "build:email": "cd email-sms-microservice && npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.3"
  },
  "workspaces": [
    "http-api-gateway",
    "users-microservice",
    "products-microservice",
    "orders-microservice",
    "payments-microservice",
    "inventory-microservice",
    "notifications-microservice",
    "files-upload-microservice",
    "email-sms-microservice"
  ],
  "keywords": [
    "microservices",
    "nestjs",
    "nats",
    "postgresql",
    "prisma",
    "docker",
    "typescript",
    "e-commerce"
  ],
  "author": "Ahmed Yacine",
  "license": "MIT"
}
